<?xml version="1.0" encoding="utf-8"?>
<resources>  
    <style name="ff">
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="wf">
         <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="fw">
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ww">
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
	<style name="gridview" parent="@android:style/TextAppearance.Medium">
     	<item name="android:layout_width">wrap_content</item> 
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:columnWidth">115dp</item>
	    <item name="android:numColumns">auto_fit</item>
	    <item name="android:verticalSpacing">10dp</item>
	    <item name="android:horizontalSpacing">10dp</item>
	    <item name="android:stretchMode">spacingWidthUniform</item>
	    <item name="android:gravity">center</item>
	    <item name="android:background">@android:color/darker_gray</item>
    </style>
    <style name="layout_listitem" parent="@style/fw">
        <item name="android:padding">12dp</item>
    </style>
    <style name="textview_listitem_child" parent="@style/fw">
		<item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">50dp</item>
     </style>
     <style name="textview_listitem_group" parent="@style/fw">
        <item name="android:textColor">@color/android_blue</item>
		<item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
     </style>
     <style name="imageview_groupindicator">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
     </style>
          
     <style name="layout_picto_bar">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">10dp</item>
     </style>
     
     <style name="imageview_picto_bar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
     </style>

     <style name="textview_picto_bar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#000000</item>
		<item name="android:textSize">15sp</item>
     </style>
     <style name="imageview_picto_grid" parent="@style/ff">
        <item name="android:scaleType">center</item>
     </style>
     <style name="textview_picto_grid" parent="@style/fw">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical|bottom</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">2</item>
		<item name="android:textSize">18sp</item>
		<item name="android:background">#AA000000</item>
		<item name="android:textColor">#ffffffff</item>
     </style>
     
     <style name="layout_picto_suggest">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
     </style>
     
     <style name="imageview_picto_suggest">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">false</item>
     </style>
     
     <style name="textview_picto_suggest">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:clickable">false</item>
     </style>

     
     
</resources>