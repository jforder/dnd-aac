<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <LinearLayout android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="38"
        android:orientation="vertical">
        <TextView
        android:id="@+id/checkHeader"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/headerwithwood"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:text="Procedures" />
    <fragment
        android:id="@+id/procedureslist_fragment"
        android:name="com.dnd.privacyapp.ProceduresListFragment"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"        
       >
    </fragment>
    </LinearLayout>
    <fragment
    	android:id="@+id/proceduresview_fragment"
        android:name="com.dnd.privacyapp.ProceduresViewFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"       
        android:layout_weight="62">
    </fragment>
    
</LinearLayout>